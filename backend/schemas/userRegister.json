{
    "$schema": "https://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "title": "Register Schema",
    "type": "object",
    "default": {},
    "required": [
        "username",
        "password",
        "email"
    ],
    "properties": {
        "username": {
            "title": "The username Schema",
            "type": "string",
            "minLength": 1,
            "maxLength": 30,
            "default": "",
            "examples": [
                "username"
            ]
        },
        "password": {
            "title": "The password Schema",
            "type": "string",
            "minLength": 8,
            "maxLength": 20,
            "default": "",
            "examples": [
                "password"
            ]
        },
        "email": {
            "title": "The email Schema",
            "type": "string",
            "minLength": 10,
            "maxLength": 60,
            "format": "email",
            "default": "",
            "examples": [
                "email"
            ]
        }
    },
    "examples": [{
        "username": "username",
        "password": "password",
        "email": "email"
    }]
}